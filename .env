# --- Discord Bot 配置 / Discord Bot Configuration ---
DISCORD_BOT_TOKEN=

# --- 音頻配置 / Audio Configuration ---
YTDL_TIMEOUT=30.0                       # youtube-dlp 調用超時（秒）/ youtube-dlp call timeout (seconds)
DEFAULT_VOLUME=1.0                      # 預設音量 / Default volume

# --- 隊列配置 / Queue Configuration ---
MAX_QUEUE_LENGTH=100                    # 最大隊列長度 / Maximum queue length
QUEUE_PAGE_SIZE=10                      # 隊列分頁大小 / Queue page size
MAX_PLAYLIST=50                         # 單次播放清單最大歌曲數 / Maximum songs per playlist addition

# --- 緩存配置 / Cache Configuration ---
CACHE_LIMIT=1000                        # 最大緩存項目 / Maximum cache entries
CACHE_EXPIRE_SECONDS=3600               # 緩存過期時間（秒）/ Cache expiration time (seconds)
CLEANUP_INTERVAL_SECONDS=300            # 緩存清理間隔（秒）/ Cache cleanup interval (seconds)

# --- 超時配置 / Timeout Configuration ---
IDLE_TIMEOUT_SECONDS=180                # 閒置超時時間（秒）/ Idle timeout (seconds)
CHECK_INTERVAL_SECONDS=30               # 檢查間隔時間（秒）/ Idle check interval (seconds)
BUTTON_TIMEOUT=180                      # 按鈕逾時時間（秒）/ Button interaction timeout (seconds)

# --- 機器人配置 / Bot Configuration ---
CASE_INSENSITIVE=true                   # 指令不區分大小寫 / Commands are case-insensitive

# --- 支援的域名（用逗號分隔）/ Supported Domains (comma-separated) ---
VALID_DOMAINS=https://www.youtube.com/,https://youtube.com/,https://youtu.be/,https://music.youtube.com/

# --- YouTube-DL (yt-dlp) 配置 / YouTube-DL (yt-dlp) Configuration ---
YTDL_FORMAT=bestaudio/best              # 音頻格式，bestaudio/best 為最高品質 / Audio format, bestaudio/best is highest quality
YTDL_NO_CHECK_CERTIFICATE=true          # 不檢查 SSL 憑證 / Do not check SSL certificates
YTDL_IGNORE_ERRORS=true                 # 忽略錯誤 / Ignore errors
YTDL_QUIET=true                         # 靜默模式，可以簡化日誌輸出 / Quiet mode, simplifies log output
YTDL_NO_WARNINGS=true                   # 隱藏警告訊息 / Suppress warnings

# --- 錯誤紀錄 / Error Logging ---
ERROR_RATE_LIMIT=5                      # 每 X 秒最多接收n次同類型錯誤 / Max n errors of the same type per X seconds
ERROR_COOLDOWN=60                       # X 之值 / Value of X