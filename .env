# Discord Bot 配置
DISCORD_BOT_TOKEN=

# 音頻配置
YTDL_TIMEOUT= 30.0          # youtube-dlp 調用超時（秒）
DEFAULT_VOLUME= 1.0         # 預設音量

# 隊列配置
MAX_QUEUE_LENGTH= 100       # 最大隊列長度
QUEUE_PAGE_SIZE= 10         # 隊列分頁大小
MAX_PLAYLIST= 50            # 單次播放清單最大歌曲數

# 緩存配置
CACHE_LIMIT= 1000           # 最大緩存項目
CACHE_EXPIRE_SECONDS= 3600  # 緩存過期時間（秒）
CLEANUP_INTERVAL_SECONDS= 300  # 緩存清理間隔（秒）

# 超時配置
IDLE_TIMEOUT_SECONDS= 180   # 閒置超時時間（秒）
CHECK_INTERVAL_SECONDS= 30  # 檢查間隔時間（秒）
BUTTON_TIMEOUT= 60          # 按鈕逾時時間（秒）

# 機器人配置
CASE_INSENSITIVE= true      # 指令不區分大小寫

# 支援的域名（用逗號分隔）
VALID_DOMAINS= https://www.youtube.com/,https://youtube.com/,https://youtu.be/,https://music.youtube.com/

# YouTube-DL 配置
YTDL_FORMAT= 251
YTDL_RESTRICT_FILENAMES= true
YTDL_NO_PLAYLIST= false
YTDL_NO_CHECK_CERTIFICATE= true
YTDL_IGNORE_ERRORS= true
YTDL_QUIET= true
YTDL_NO_WARNINGS= true

# 錯誤紀錄
ERROR_RATE_LIMIT= 5         # 每X秒最多接收n次同類型錯誤
ERROR_COOLDOWN = 60         # X之值